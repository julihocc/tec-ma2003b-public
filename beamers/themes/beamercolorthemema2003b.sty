% MA2003B Color Theme
% Based on Tec de Monterrey brand colors
% Uses shared color definitions from ma2003b-colors.sty

\mode<presentation>

% Load shared color definitions
\RequirePackage{ma2003b-colors}

% Additional academic colors (specific to beamer)
\definecolor{darkred}{RGB}{139, 0, 0}
\definecolor{darkgreen}{RGB}{0, 100, 0}

% Main structure colors
\setbeamercolor{structure}{fg=tecblue}
\setbeamercolor{normal text}{fg=black, bg=white}
\setbeamercolor{alerted text}{fg=tecorange}
\setbeamercolor{example text}{fg=tecgreen}

% Title and frame colors
\setbeamercolor{title}{fg=tecblue}
\setbeamercolor{subtitle}{fg=tecgray}
\setbeamercolor{frametitle}{bg=tecblue, fg=white}
\setbeamercolor{framesubtitle}{fg=tecgray}

% Header and footer
\setbeamercolor{author in head/foot}{bg=tecblue!20, fg=tecblue}
\setbeamercolor{title in head/foot}{bg=tecblue, fg=white}
\setbeamercolor{date in head/foot}{bg=tecblue!20, fg=tecblue}

% Progress bar (for metropolis theme)
\setbeamercolor{progress bar}{fg=tecorange, bg=tecgray!30}
\setbeamercolor{progress bar in head/foot}{fg=tecorange, bg=tecgray!30}
\setbeamercolor{progress bar in section page}{fg=tecorange, bg=tecgray!30}

% Block environments
\setbeamercolor{block title}{bg=tecblue!80, fg=white}
\setbeamercolor{block body}{bg=tecblue!10, fg=black}

\setbeamercolor{block title example}{bg=tecgreen!80, fg=white}
\setbeamercolor{block body example}{bg=tecgreen!10, fg=black}

\setbeamercolor{block title alerted}{bg=tecorange!80, fg=white}
\setbeamercolor{block body alerted}{bg=tecorange!10, fg=black}

% Mathematics
\setbeamercolor{math text}{fg=tecblue}
\setbeamercolor{math text inlined}{fg=tecblue}

% Table of contents
\setbeamercolor{section in toc}{fg=tecblue}
\setbeamercolor{subsection in toc}{fg=tecgray}

% Section pages with lighter blue background  
\setbeamercolor{section page}{bg=tecblue}
\setbeamercolor{section title}{fg=white, bg=tecblue}
\setbeamercolor{section title box}{fg=white, bg=tecblue!70}
\setbeamercolor{subsection title}{fg=white, bg=tecblue!50}

% Bibliography
\setbeamercolor{bibliography entry author}{fg=tecblue}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=tecgray}
\setbeamercolor{bibliography entry note}{fg=tecgray}

\mode<all>